{
  "family": "thanksdeck-task-definition-backend",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::459497896054:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::459497896054:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "rails",
      "image": "459497896054.dkr.ecr.ap-northeast-1.amazonaws.com/thanksdeck-rails:latest",
      "essential": true,
      "cpu": 0,
      "portMappings": [
        {
          "name": "rails-3000-tcp",
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [{ "name": "RAILS_LOG_TO_STDOUT", "value": "true" }],
      "secrets": [
        {
          "name": "RAILS_MASTER_KEY",
          "valueFrom": "/thanksdeck/prod/rails_master_key"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl --unix-socket /myapp/tmp/sockets/puma.sock localhost/api/v1/health_check || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "timeout": 5
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/thanksdeck-task-definition-backend",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "nginx",
      "image": "459497896054.dkr.ecr.ap-northeast-1.amazonaws.com/thanksdeck-nginx",
      "essential": true,
      "cpu": 0,
      "dependsOn": [{ "containerName": "rails", "condition": "HEALTHY" }],
      "portMappings": [
        {
          "name": "nginx-80-tcp",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "volumesFrom": [{ "sourceContainer": "rails", "readOnly": false }],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/api/v1/health_check || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "timeout": 5
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/thanksdeck-task-definition-backend",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [],
  "placementConstraints": []
}
