{
  "family": "thanksdeck-task-definition-backend",
  "containerDefinitions": [
    {
      "cpu": 0,
      "environment": [
        {
          "name": "RAILS_LOG_TO_STDOUT",
          "value": "true"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl --unix-socket /myapp/tmp/sockets/puma.sock localhost/api/v1/health_check || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "timeout": 5
      },
      "image": "459497896054.dkr.ecr.ap-northeast-1.amazonaws.com/thanksdeck-rails@sha256:cbcb65b3917e43d22648af127fe783fcd6918f5f2abbadcc1ae51a067b5c2de3",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/thanksdeck-task-definition-backend",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
      },
      "mountPoints": [],
      "name": "rails",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 3000,
          "hostPort": 3000,
          "name": "rails-3000-tcp",
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "RAILS_MASTER_KEY",
          "valueFrom": "/thanksdeck/prod/rails_master_key"
        }
      ],
      "systemControls": [],
      "volumesFrom": []
    },
    {
      "cpu": 0,
      "dependsOn": [
        {
          "condition": "HEALTHY",
          "containerName": "rails"
        }
      ],
      "environment": [],
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost/api/v1/health_check || exit 1"
        ],
        "interval": 30,
        "retries": 3,
        "timeout": 5
      },
      "image": "459497896054.dkr.ecr.ap-northeast-1.amazonaws.com/thanksdeck-nginx",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/thanksdeck-task-definition-backend",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
      },
      "mountPoints": [],
      "name": "nginx",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 80,
          "hostPort": 80,
          "name": "nginx-80-tcp",
          "protocol": "tcp"
        }
      ],
      "systemControls": [],
      "volumesFrom": [
        {
          "readOnly": false,
          "sourceContainer": "rails"
        }
      ]
    }
  ],
  "taskRoleArn": "arn:aws:iam::459497896054:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::459497896054:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  }
}
